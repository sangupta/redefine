{
    "compilerOptions": {
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "target": "esnext",
        "module": "System",
        "strict": true,
        "rootDir": "./src",
        "incremental": true,
        "lib": [
            "dom",
            "ESNext"
        ],
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules"
    ]
}
